use crate::ast_utils::item::*;
use koopa::ir::BinaryOp;
use koopa::ir::Type;

grammar;

match {
  r"\s*" => {},
  r"//[^\n\r]*[\n\r]*" => {},
  r"/\*[^*]*\*+(?:[^/*][^*]*\*+)*/" => {},
  _
}

Comma<T>: Vec<T> = {
    <mut v:(<T> ",")*> <e: T?> => match e {
        None => v,
        Some(e) => {
            v.push(e);
            v
        }
    }
}

// ======================================================
pub CompUnits: CompUnits = <comp_units: CompUnit*> => CompUnits {<>};

CompUnit: CompUnit = {
    // 1. Const Declaration (无歧义)
    <c_decl: ConstDecl> => CompUnit::Decl(Decl::ConstDecl(c_decl)),

    // 2. Void Function (无歧义)
    "void" <ident: Ident> "(" <params: Comma<FuncFParam>> ")" <block: Block> => {
        CompUnit::FuncDef(FuncDef {
            func_type: Type::get_unit(),
            ident,
            params,
            block,
        })
    },

    // 3. Int Start (有歧义: int Ident ...)
    // 策略：解析 "int" 和 Ident，然后调用 IntSuffix 规则。
    // IntSuffix 返回一个闭包，我们把 ident 传给它来构造结果。
    "int" <ident: Ident> <builder: IntSuffix> => builder(ident),
}

// 这是一个后缀规则，处理 int Ident 之后的部分
// 返回类型是一个闭包，接收 Ident (Rc<str>)，返回 CompUnit
IntSuffix: Box<dyn FnOnce(std::rc::Rc<str>) -> CompUnit> = {
    // 分支 A: 遇到左括号 -> 函数定义
    "(" <params: Comma<FuncFParam>> ")" <block: Block> => {
        Box::new(move |ident| CompUnit::FuncDef(FuncDef {
            func_type: Type::get_i32(), // 既然进入了 IntSuffix，说明开头是 int
            ident,
            params,
            block,
        }))
    },

    // 分支 B: 遇到赋值号或分号或逗号 -> 变量声明
    // 这里的逻辑是：解析可选的初始化值，以及后续可能的更多变量定义
    <arr_dim: ("[" <ConstExp> "]")*><init_val: ("=" <InitVal>)?> <mut rest: ("," <VarDef>)*> ";" => {
        Box::new(move |ident| {
            // 将第一个变量（前缀解析的 ident + 这里解析的 init）构建出来
            let first_def = VarDef { ident, arr_dim, init_val };
            // 插到列表最前面
            rest.insert(0, first_def);
            
            CompUnit::Decl(Decl::VarDecl(VarDecl {
                btype: Type::get_i32(),
                var_defs: rest,
            }))
        })
    }
}
